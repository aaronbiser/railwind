{
  "name": "@aaronbiser/railwind",
  "version": "1.0.0",
  "description": "An experimental React component library built with tailwind and TypeScript",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist"
  ],
  "typings": "dist/index.d.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "rollup -c",
    "build-watch": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start-playground": "cd playground && npm run start",
    "i-all": "npm i && cd playground && npm i",
    "dev": "npm-run-all --parallel build:railwind scripts:generateTailwindTypes build-watch start-playground",
    "build:railwind": "npm-run-all --parallel build:package build:playground",
    "build:package": "npx tailwindcss-cli@latest build tailwind.css -o src/styles.css",
    "build:playground": "npx tailwindcss-cli@latest build tailwind.css -o playground/src/styles.css",
    "scripts:generateTailwindTypes": "node ./src/lib/generateTailwindTypes.js"
  },
  "keywords": [],
  "author": "Aaron Biser",
  "license": "ISC",
  "devDependencies": {
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.26.4",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "tailwindcss": "^2.1.2",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": "^16.10.2",
    "react-dom": "^16.10.2"
  },
  "dependencies": {
    "@types/classnames": "^2.2.10",
    "classnames": "^2.2.6",
    "dotenv": "^8.2.0",
    "react-cool-onclickoutside": "^1.5.9"
  }
}
